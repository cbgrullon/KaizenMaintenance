@model  Kaizen_Maintenance.Models.UserSearchViewModel
<div class="jumbotron text-center">
    <h2>
        Usuarios
    </h2>
</div>
@using (Html.BeginForm("Index", "Usuarios", "POST"))
{
    <div class="row">
        <div class="col-md-12">
            <div class="input-group">
                @Html.TextBoxFor(model => model.SearchText, new { @Class = "form-control", style = "max-width:none;" })
                <span title="Buscar" class="input-group-addon  btn btn-default" onclick="document.getElementById('btSubmit').click()">
                    <i class="glyphicon glyphicon-search"></i>
                </span>
                <span title="Añadir Usuario" class="input-group-addon  btn btn-default" onclick="location.href='@Url.Action("Create","Usuarios")'">
                    <i class="glyphicon glyphicon-plus"></i>
                </span>
            </div>
        </div>
    </div>
    <input type="submit" hidden id="btSubmit"/>
}
<div class="table-responsive">
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].UserName)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Posted)
            {
                if (Model.Results.Count == 0)
                {
                    <tr>
                        <td colspan="2">
                            No se encontro el Usuario
                        </td>
                    </tr>
                }
                foreach (var item in Model.Results)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(i => item.UserName)
                        </td>
                        <td>
                            @Html.ActionLink("Detalles", "Details", new { Id = item.UserId })
                        </td>
                    </tr>
                }
            }            
        </tbody>
    </table>
</div>