@model Kaizen_Maintenance.Models.User
@{
    ViewBag.Title = "Detalles - "+Model.UserName;
}

<div class="jumbotron">
    <h2 class="text-center">
        Detalles del Usuario
    </h2>
</div>
<div class="table-responsive">
    <table class="table table-striped text-center">
        <tbody>
            <tr>
                <td>
                    @Html.DisplayTextFor(model => model.UserName)
                </td>
                <td>
                    @Html.ActionLink("Reiniciar Contraseña", "ChangePassword", new { Id = Model.UserId })
                </td>
                <td>
                    @Html.ActionLink("Manejar Roles", "ManageRoles", new { Id = Model.UserId })
                </td>
                @if (Model.Enabled)
                {
                <td>
                    @Html.ActionLink("Deshabilitar Usuario", "DisableUser", new { Id = Model.UserId })
                </td>
                }
            </tr>
        </tbody>
    </table>
</div>