@model IEnumerable<Kaizen_Maintenance.Models.Equipos>

@{
    ViewBag.Title = "Equipos";
}
<div class="jumbotron text-center">
    <h2>Equipos</h2>
</div>
<p>
    @Html.ActionLink("Agregar Equipo", "Create")
</p>
<table class="table table-striped text-center">
    <tr>
        <th class="text-center">
            Marca
        </th>
        <th class="text-center">
            Modelo
        </th>
        <th class="text-center">
            Descripcion del Equipo
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Serial)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.No_Activo)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=>item.Modelo.Marca.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.Modelo.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Serial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.No_Activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdEquipo }) |
            @Html.ActionLink("Details", "Details", new { id = item.IdEquipo }) 
        </td>
    </tr>
}

</table>
