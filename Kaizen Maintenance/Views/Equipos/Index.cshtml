@model IEnumerable<Kaizen_Maintenance.Models.Equipos>

@{
    ViewBag.Title = "Todos los Equipos";
}

<div class="jumbotron text-center">
    <h2>
        Todos los Equipos
    </h2>
</div>
<p>
    @Html.ActionLink("Registrar Equipo", "Create")
</p>
<table class="table table-striped text-center">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Modelo.Descripcion)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdEquipo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdEquipo }) 
        </td>
    </tr>
}

</table>
